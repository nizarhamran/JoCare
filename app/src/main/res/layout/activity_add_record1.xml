                <RadioButton
                    android:id="@+id/ChNAsthma"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="No"
                    android:buttonTint="@color/blue"
                    android:textColor="@color/blue" />
