            <RadioGroup
                android:id="@+id/KidneyGroup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/ChYKidney"
                    android:layout_width="wrap_content"
