                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:fontFamily="sans-serif-condensed"
                android:text="6- Artificial prosthesis"
                android:textColor="@color/blue"
                android:textSize="20sp" />

            <RadioGroup
                android:id="@+id/ProsthesisGroup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/ChYProsthesis"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Yes"
                    android:buttonTint="@color/blue"
                    android:textColor="@color/blue" />

                <RadioButton
                    android:id="@+id/ChNProsthesis"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="No"
                    android:buttonTint="@color/blue"
                    android:textColor="@color/blue" />
            </RadioGroup>

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:fontFamily="sans-serif-condensed"
                android:text="7- High or low blood pressure"
                android:textColor="@color/blue"
                android:textSize="20sp" />

            <RadioGroup
                android:id="@+id/BloodpressureGroup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/ChYBloodpressure"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Yes"
                    android:buttonTint="@color/blue"
                    android:textColor="@color/blue" />

                <RadioButton
                    android:id="@+id/ChNBloodpressure"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="No"
                    android:buttonTint="@color/blue"
                    android:textColor="@color/blue" />
            </RadioGroup>


            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:fontFamily="sans-serif-condensed"
                android:text="8- A stroke"
                android:textColor="@color/blue"
                android:textSize="20sp" />

            <RadioGroup
                android:id="@+id/StrokeGroup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
