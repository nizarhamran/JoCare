<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddRecord1">

    <FrameLayout
        android:id="@+id/AppBar"
        android:layout_width="match_parent"
        android:layout_height="76dp"
        android:background="@color/blue"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fontFamily="sans-serif-condensed"
            android:gravity="center"
            android:text="Medical Record"
            android:textColor="@color/white"
            android:textSize="24sp"
            android:textStyle="bold" />

        <ImageButton
            android:id="@+id/back1"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:background="@color/blue"
            android:clickable="true"
            android:focusable="true"
            android:focusableInTouchMode="false"
            android:paddingTop="10dp"
            android:tint="#FFFFFF"
            android:translationX="5dp"
            android:translationY="20dp"
            app:srcCompat="@drawable/abc_vector_test" />

    </FrameLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="723dp"
        android:layout_marginBottom="5dp"
        android:scrollbars="none"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/AppBar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="5dp">


            <TextView
                android:id="@+id/FnameHeader"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="20dp"
                android:fontFamily="sans-serif-condensed"
                android:text="Patient First Name"
                android:textColor="@color/blue"
                android:textSize="20sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/editTxtFname"
                android:layout_width="240dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:ems="10"
                android:hint="Enter Name"
                android:importantForAutofill="no"
                android:inputType="textPersonName"
                android:textColor="@color/blue"
                android:textColorHint="@color/blue" />

            <TextView
                android:id="@+id/LnameHeader"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:fontFamily="sans-serif-condensed"
                android:text="Patient Last Name"
                android:textColor="@color/blue"
                android:textSize="20sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/editTxtLname"
                android:layout_width="240dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:ems="10"
                android:hint="Last Name"
                android:importantForAutofill="no"
                android:inputType="textPersonName"
                android:textColor="@color/blue"
                android:textColorHint="@color/blue" />

            <TextView
                android:id="@+id/DobHeader"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:fontFamily="sans-serif-condensed"
                android:text="Date Of Birth"
                android:textColor="@color/blue"
                android:textSize="20sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/editTxtDob"
                android:layout_width="240dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:ems="10"
                android:hint="Enter Date"
                android:importantForAutofill="no"
                android:inputType="date"
                android:textColorHint="@color/blue" />

            <TextView
                android:id="@+id/NatIdHead"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:fontFamily="sans-serif-condensed"
                android:text="Patients National ID"
                android:textColor="@color/blue"
                android:textSize="20sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/editTxtNatId"
                android:layout_width="276dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:ems="10"
                android:hint="Patients National ID"
                android:inputType="textPersonName"
                android:textColor="@color/blue"
                android:textColorHint="@color/blue" />


            <TextView
                android:id="@+id/phExaminationHead"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:fontFamily="sans-serif-condensed"
                android:text="Most recent physical examination"
                android:textColor="@color/blue"
                android:textSize="20sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/editTxtExamintaion"
                android:layout_width="240dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:ems="10"
                android:hint="recent examination"
                android:importantForAutofill="no"
                android:inputType="textPersonName"
                android:textColorHint="@color/blue" />

            <TextView
                android:id="@+id/EstimateHealthHead"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:fontFamily="sans-serif-condensed"
                android:text="What is your estimate for your general health"
                android:textColor="@color/blue"
                android:textSize="20sp"
                android:textStyle="bold" />

            <RadioGroup
                android:id="@+id/generalGroup"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_marginLeft="10dp"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/ChBExcellent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:buttonTint="@color/blue"
                    android:text="Excellent"
                    android:textColor="@color/blue" />

                <RadioButton
                    android:id="@+id/ChBGood"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginLeft="10dp"
                    android:buttonTint="@color/blue"
                    android:text="Good"
                    android:textColor="@color/blue" />

                <RadioButton
                    android:id="@+id/ChBBad"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginLeft="10dp"
                    android:buttonTint="@color/blue"
                    android:text="Bad"
                    android:textColor="@color/blue" />
            </RadioGroup>

            <TextView
                android:id="@+id/QuestionHead"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:fontFamily="sans-serif-condensed"
                android:text="Do you ever have or have ever had :"
                android:textColor="@color/blue"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/PhoneHeader"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:fontFamily="sans-serif-condensed"
                android:text="1-Hospitalization for illness or injury :"
                android:textColor="@color/blue"
                android:textSize="20sp" />

            <RadioGroup
                android:id="@+id/HospitalizationGroup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:buttonTint="@color/blue"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/ChYHospitalization"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:buttonTint="@color/blue"
                    android:text="Yes"
                    android:textColor="@color/blue" />

                <RadioButton
                    android:id="@+id/ChNHospitalization"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:buttonTint="@color/blue"
                    android:text="No"
                    android:textColor="@color/blue" />
            </RadioGroup>

            <TextView
                android:id="@+id/CivilHeader"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:fontFamily="sans-serif-condensed"
                android:text="2- Heart problem within the last six months"
                android:textColor="@color/blue"
                android:textSize="20sp" />

            <RadioGroup
