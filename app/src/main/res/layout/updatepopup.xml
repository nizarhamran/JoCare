<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:gravity="center">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="10dp"
        app:cardBackgroundColor="@color/basic"
        app:cardElevation="25dp"
        android:focusable="true">

        <LinearLayout
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/cardTextUpdateView"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/NatUpdateRecord"
                android:textColor="@color/blue"
                android:textSize="20sp"
                android:textStyle="bold"
                android:padding="10dp"/>
            <EditText
                android:id="@+id/cardEditTxtUpdateNat"
                android:layout_width="276dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="5dp"
                android:ems="10"
                android:inputType="textPersonName"
                android:hint="Patients National ID"
                android:textColor="@color/blue"
                android:textColorHint="@color/blue" />


            <Button
                android:id="@+id/cardViewUpdateBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#98cff0"
                android:text="Update" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>
</LinearLayout>